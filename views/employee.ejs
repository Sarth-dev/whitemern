<!DOCTYPE html>
<html lang="Javascript">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Create Employee page</title>
</head>
<body>
    <div class="w-full h-screen bg-zinc-800 text-white">
        <div class="logo w-full h-8 bg-[#FFB300] p-1 text-black">Logo</div>
        <%- include('partials/navbar') %>
        <div class="w-full p-5 h-full bg-zinc-900">
            <form action="/createemployee" method="POST" enctype="multipart/form-data" class="space-y-4">
            
                <!-- Name -->
                <div>
                    <label for="name" class="block font-medium">Name:</label>
                    <input type="text" id="name" name="name" class="w-full  bg-zinc-700 outline-none border border-gray-300 p-2 rounded-md" required>
                </div>
    
                <!-- Email -->
                <div>
                    <label for="email" class="block font-medium">Email:</label>
                    <input type="email" id="email" name="email" class="w-full bg-zinc-700 outline-none border border-gray-300 p-2 rounded-md" required>
                </div>
    
                <!-- Mobile No -->
                <div>
                    <label for="mobile" class="block font-medium">Mobile No:</label>
                    <input type="text" id="mobile" name="mobile" class="w-full bg-zinc-700 outline-none border border-gray-300 p-2 rounded-md" required>
                </div>
    
                <!-- Designation -->
                <div>
                    <label for="designation" class="block font-medium">Designation:</label>
                    <select id="designation" name="designation" class="w-full bg-zinc-700 outline-none border border-gray-300 p-2 rounded-md" required>
                        <option value="" disabled selected>Select</option>
                        <option value="HR">HR</option>
                        <option value="Manager">Manager</option>
                        <option value="Sales">Sales</option>
                    </select>
                </div>
    
                <!-- Gender -->
                <div>
                    <label class="block font-medium">Gender:</label>
                    <div class="flex gap-4">
                        <label>
                            <input type="radio" name="gender" value="M" required> Male
                        </label>
                        <label>
                            <input type="radio" name="gender" value="F"> Female
                        </label>
                    </div>
                </div>
    
                <!-- Course -->
                <div>
                    <label class="block font-medium">Course:</label>
                    <div class="flex flex-wrap gap-4">
                        <label>
                            <input type="checkbox" name="course" value="MCA"> MCA
                        </label>
                        <label>
                            <input type="checkbox" name="course" value="BCA"> BCA
                        </label>
                        <label>
                            <input type="checkbox" name="course" value="BSC"> BSC
                        </label>
                    </div>
                </div>
    
                <!-- Image Upload -->
                <div>
                    <label for="image" class="block font-medium">Image Upload:</label>
                    <input type="file" id="image" name="image" class="w-full bg-zinc-700 outline-none border border-gray-300 p-2 rounded-md" accept="image/*" required>
                </div>
    
                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">
                        Submit
                    </button>
                </div>
    
            </form>
        </div>
    </div>
</body>
</html>